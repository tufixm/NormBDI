<?xml version="1.0" encoding="UTF-8"?>
<!--
  Chat component.
-->
<componenttype xmlns="http://jadex.sourceforge.net/jadex"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://jadex.sourceforge.net/jadex
						http://jadex.sourceforge.net/jadex-component-2.3.xsd"
	name="Chat" package="jadex.platform.service.chat">
	
    <imports>
    	<import>jadex.bridge.service.types.chat.*</import>    
    </imports>
    
	<services>
		<providedservice name="chat" class="IChatService">
			<implementation class="ChatService"/>
		</providedservice>
		<providedservice class="IChatGuiService">
			<implementation>
				$component.getRawService("chat")
			</implementation>
		</providedservice>
		<requiredservice name="chatservices" class="IChatService" multiple="true">
			<binding dynamic="true" scope="global"/>
		</requiredservice>
	</services>
	
</componenttype>